<h2> Editing <%= @student.first_name %> </h2>

<form action='/schools/<%= @school.id %>/students/<%= @student.id %>' method='post'>
<input type="hidden" name="_method" value="patch">
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    First Name:
    <input type='text' name='student[first_name]' value = "<%= @student.first_name %>" />
    Last Name:
    <input type='text' name='student[last_name]' value = "<%= @student.last_name %>" />
    Email Address:
    <input type='text' name='student[email]' value = "<%= @student.email %>" />
    School:

    <select name='student[school_id]'>
    <% @schools.each do |school| %>
        <% if school.id == @school.id %>
            <option value="<%= school.id %>" selected="selected"><%= school.city %></option>
        <% else %>
            <option value="<%= school.id %>"> <%= school.city %> </option>
        <% end %>
    <% end %>
    </select>

    <input type='submit' value='Update' />
</form>